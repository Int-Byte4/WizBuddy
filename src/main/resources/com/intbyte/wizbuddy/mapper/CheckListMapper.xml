<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.intbyte.wizbuddy.mapper.CheckListMapper">
    <resultMap type="com.intbyte.wizbuddy.checklist.domain.entity.CheckList" id="checkListResultMap">
        <id property="checkListCode" column="checklist_code"/>
        <result property="checkListTitle" column="checklist_title"/>
        <result property="checkListFlag" column="checklist_flag"/>
        <result property="createdAt" column="created_at"/> <!-- column은 db 컬럼명과 동일해야함. -->
        <result property="updatedAt" column="updated_at"/>
        <result property="shopCode" column="shop_code"/>
    </resultMap>

    <select id="findAllCheckList" resultMap="checkListResultMap">
        SELECT
             A.checklist_code
           , A.checklist_title
           , A.checklist_flag
           , A.created_at
           , A.updated_at
           , A.shop_code
        FROM check_list A
    </select>

    <select id="findCheckListById" resultMap="checkListResultMap" parameterType="int">
        SELECT
             A.checklist_code
           , A.checklist_title
           , A.checklist_flag
           , A.created_at
           , A.updated_at
           , A.shop_code
        FROM check_list A
        WHERE A.checklist_code = #{ checkListCode }
    </select>

    <!-- flag가 true인것만 조회 -->
    <select id="findAllCheckListsByFlag" resultMap="checkListResultMap">
        SELECT
             A.checklist_code
           , A.checklist_title
           , A.checklist_flag
           , A.created_at
           , A.updated_at
           , A.shop_code
        FROM check_list A
        WHERE A.checklist_flag = false
    </select>


</mapper>